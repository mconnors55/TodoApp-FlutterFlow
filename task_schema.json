{
      "type": "object",
      "description": "Collection of task documents",
      "properties": {
        "taskDocument": {
          "type": "object",
          "description": "Schema for a single task document",
          "properties": {
            "completed": {
              "type": "boolean",
              "description": "Indicates if the task is completed."
            },
            "created": {
              "type": "string",
              "format": "date-time",
              "description": "Timestamp when the task was created in ISO 8601 format."
            },
            "details": {
              "type": "string",
              "description": "Details or description of the task."
            },
            "title": {
              "type": "string",
              "description": "Title of the task."
            },
            "user": {
              "type": "string",
              "pattern": "^/users/[^/]+$",
              "description": "Reference to the user document in the users collection."
            }
          },
          "required": ["completed", "created", "title", "user"]
        }
    }
}
 